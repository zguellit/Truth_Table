<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F384B"
    tools:context=".MainActivity">

    <Button
        android:textSize="26sp"
        android:backgroundTint="#FE4D4C"
        android:id="@+id/true1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="true"
        app:layout_constraintBottom_toTopOf="@+id/and"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/false1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textSize="26sp"
        android:backgroundTint="#FE4D4C"
        android:id="@+id/false1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="false"
        app:layout_constraintBottom_toTopOf="@+id/or"
        app:layout_constraintLeft_toRightOf="@+id/true1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textSize="26sp"
        android:backgroundTint="#FE4D4C"
        android:id="@+id/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  &amp;&amp;  "
        app:layout_constraintBottom_toTopOf="@+id/true2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/or"
        app:layout_constraintTop_toBottomOf="@+id/true1" />

    <Button
        android:textSize="26sp"
        android:backgroundTint="#FE4D4C"
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  ||  "
        app:layout_constraintBottom_toTopOf="@+id/false2"
        app:layout_constraintLeft_toRightOf="@+id/and"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/false1" />

    <Button
        android:textSize="26sp"
        android:backgroundTint="#FE4D4C"
        android:id="@+id/true2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:text="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/false2"
        app:layout_constraintTop_toBottomOf="@+id/and" />

    <Button
        android:textSize="26sp"
        android:backgroundTint="#FE4D4C"
        android:id="@+id/false2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:text="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/true2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or" />


    <Button
        android:backgroundTint="#FE4D4C"
        android:id="@+id/result"
        android:textSize="46sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>